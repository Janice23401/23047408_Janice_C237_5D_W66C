<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Outfit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('navbar') %>
    <div class="container mt-5">
        <a href="/generate-outfit" class="btn btn-success">Generate Outfit</a>
        
        <h1>Your Generated Outfit</h1>
        <div class="row">
            <% if (outfit && outfit.length > 0) { %>
                <% outfit.forEach(item => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="/uploads/<%= item.image %>" class="card-img-top" alt="<%= item.type_of_clothes %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= item.type_of_clothes %></h5>
                                <p class="card-text">Size: <%= item.size %></p>
                                <p class="card-text">Color: <%= item.color %></p>
                                <p class="card-text">Brand: <%= item.brand %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No outfits found.</p>
            <% } %>
        </div>
        <a href="/home" class="btn btn-primary">Back to Home</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
