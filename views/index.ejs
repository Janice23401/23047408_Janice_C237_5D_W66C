<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wardrobe Wizard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .navbar {
            margin-bottom: 20px;
        }

        .container h1 {
            margin-bottom: 30px;
        }

        .card {
            margin-bottom: 20px;
        }

        .card-img-top {
            max-height: 200px;
            object-fit: cover;
        }

        .btn-primary {
            background-color: violet;
            /* Change this color to your preferred color */
            border-color: violet;
            /* Change this color to your preferred color */
        }

        .btn-primary:hover {
            background-color: purple;
            /* Change this color to your preferred color */
            border-color: purple;
            /* Change this color to your preferred color */
        }
    </style>
</head>

<body>
    <%- include('navbar', { username: username }) %>

    <div class="container mt-5">
        <h1>Your Closet</h1>
        <div class="row">
            <% clothes.forEach(function(cloth) { %>
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <img src="/uploads/<%= cloth.image %>" width="20%" class="card-img-top" alt="<%= cloth.type_of_clothes %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= cloth.type_of_clothes %>
                            </h5>
                            <p class="card-text">Size: <%= cloth.size %></p>
                            <p class="card-text">Color: <%= cloth.color %></p>
                            <p class="card-text">Brand: <%= cloth.brand %></p>
                            <a href="/clothes/<%= cloth.id %>?username=<%= username %>" class="btn btn-primary">View Details</a>
                            <a href="/editClothes/<%= cloth.id %>" class="btn btn-warning">Edit</a>
                            <form action="/deleteClothes/<%= cloth.id %>" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
